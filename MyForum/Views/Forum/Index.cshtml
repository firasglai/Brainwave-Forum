
@model MyForum.Web.Models.Blog.BlogIndexModel
@{
    ViewData["Title"] = "Index";
}

<h1> Blogs Home </h1>

<table class="table-dark table-bordered ">
   
    <tbody>
        @foreach (var blog in Model.BlogList)
        {
           
            <tr>
               
                <td>
                    <a asp-controller="Forum" asp-action="Topic" asp-route-id="@blog.Id">
                    @blog.Name
                    </a>
                </td>
                <td>
                    @blog.Description
                </td>
            </tr>
        }
    </tbody>

</table>

